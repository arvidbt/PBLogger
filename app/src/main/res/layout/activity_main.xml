        android:layout_height="360dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/MAIN">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="75dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ACCENT">

                    <TextView
                        android:id="@+id/SQUAT_WEIGHT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="110dp"
                        android:fontFamily="sans-serif-black"
                        android:text="0"
                        android:textColor="@color/HIGHLIGHT_TEXT"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SQUAT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="74dp"
                        android:layout_marginBottom="23dp"
                        android:fontFamily="sans-serif-black"
                        android:text="SQUAT"
                        android:textColor="@color/TEXTCOLOR"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SQUAT_GAINED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="10dp"
                        android:text="+ 0 KG"
                        android:textColor="@color/FIRE"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="14dp"
                        app:srcCompat="@drawable/icons8_squats_48__"
                        app:tint="@color/HIGHLIGHT_TEXT" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="265dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ACCENT">

                    <TextView
                        android:id="@+id/BENCHPRESS_WEIGHT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="110dp"
                        android:fontFamily="sans-serif-black"
                        android:text="0"
                        android:textColor="@color/HIGHLIGHT_TEXT"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BENCHPRESS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="73dp"
                        android:layout_marginBottom="26dp"
                        android:fontFamily="sans-serif-black"
                        android:text="BENCHPRESS"
                        android:textColor="@color/TEXTCOLOR"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BENCH_GAINED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="10dp"
                        android:text="+ 0 KG"
                        android:textColor="@color/FIRE"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="14dp"
                        app:srcCompat="@drawable/icons8_bench_press_48__"
                        app:tint="@color/HIGHLIGHT_TEXT"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="170dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ACCENT">

                    <TextView
                        android:id="@+id/DEADLIFT_WEIGHT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="110dp"
                        android:fontFamily="sans-serif-black"
                        android:text="0"
                        android:textColor="@color/HIGHLIGHT_TEXT"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/DEADLIFT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="74dp"
                        android:layout_marginBottom="25dp"
                        android:fontFamily="sans-serif-black"
                        android:text="DEADLIFT"
                        android:textColor="@color/TEXTCOLOR"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/DEADLIFT_GAINED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="10dp"
                        android:text="+ 0 KG"
                        android:textColor="@color/FIRE"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="14dp"
                        app:srcCompat="@drawable/icons8_deadlift_48__"
                        app:tint="@color/HIGHLIGHT_TEXT" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="103dp"
                android:layout_marginTop="37dp"
                android:fontFamily="sans-serif-black"
                android:text="LIFT"
                android:textColor="@color/TEXTCOLOR"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="206dp"
                android:layout_marginTop="26dp"
                android:fontFamily="sans-serif-black"
                android:text="CURRENT\nPB"
                android:textColor="@color/TEXTCOLOR"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="304dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-black"
                android:text="+ SINCE\n   START"
                android:textColor="@color/TEXTCOLOR"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="413dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/LOG_NEW_PR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ACCENT"
            android:clickable="true"
            app:backgroundTint="#E64A19"
            app:layout_anchor="@id/bottomAppBar3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.952"
            app:srcCompat="@drawable/ic_baseline_add_24"
            app:strokeWidth="2dp" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar3"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/MAIN"
            app:fabCradleMargin="15dp"
            app:fabCradleRoundedCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/SETTINGS_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/ACCENT"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            android:fontFamily="sans-serif-black"
            android:text="Settings"
            android:textColor="@color/TEXTCOLOR"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_anchor="@+id/bottomAppBar3"
            app:layout_anchorGravity="start|center" />

        <Button
            android:id="@+id/PREVIEW_PR_VIDEO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/ACCENT"
            android:drawableRight="@drawable/ic_baseline_preview_24"
            android:fontFamily="sans-serif-black"
            android:text="Preview\nLifts"
            android:textColor="@color/TEXTCOLOR"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_anchor="@+id/bottomAppBar3"
            app:layout_anchorGravity="end|center" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>