                        android:layout_marginBottom="13dp"
                        android:fontFamily="sans-serif-black"
                        android:text="SCORE"
                        android:textColor="@color/TEXTCOLOR"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/WILKS"
